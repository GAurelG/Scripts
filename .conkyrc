double_buffer yes

# determination de la fenetre, type de fenetre...
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_argb_visual yes

# temps entre les rafraichissement du conky (en secondes)
update_interval 1

#nombre d'echantillon pour les moyennes cpu et memoire
#cpu_avg_sample 5
#net_avg_sample 3

# parametres de police
use_xft yes
xftalpha .1
override_utf8_locale yes
draw_shades no

# taille et position
alignment top_left

#ecart avec le bord x=gauche ou droite; y=haut ou bas
gap_x 35
gap_y 75



